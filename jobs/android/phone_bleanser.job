#!/usr/bin/env bash

evry 4 hours -bleanser-phone && {
	sms_size="$(find ~/data/SMSBackups -iname '*sms*' -type f | wc -l)"
	if ((sms_size < 5)); then
		echo 'SMSBackups dir has less than 5 exports, exiting...' 1>&2
		exit 0
	fi
	bleanser-runall bleanser_sean.modules.smscalls
	rm -vrf ~/.cache/removed
}
